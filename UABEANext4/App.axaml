<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:local="using:UABEANext4"
             x:Class="UABEANext4.App"
             RequestedThemeVariant="Dark">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Resources>
    <!-- Color Palette - Black & Blue Theme -->
    <Color x:Key="BackgroundDark">#0a0a0f</Color>
    <Color x:Key="BackgroundMedium">#0f0f18</Color>
    <Color x:Key="BackgroundLight">#151520</Color>
    <Color x:Key="SurfaceColor">#1a1a28</Color>
    <Color x:Key="BorderColor">#252538</Color>
    <Color x:Key="BorderColorLight">#303048</Color>

    <Color x:Key="AccentBlue">#00a8ff</Color>
    <Color x:Key="AccentBlueDark">#0080cc</Color>
    <Color x:Key="AccentBlueLight">#40c4ff</Color>
    <Color x:Key="AccentGlow">#0066ff</Color>

    <Color x:Key="TextPrimary">#e8e8f0</Color>
    <Color x:Key="TextSecondary">#a0a0b8</Color>
    <Color x:Key="TextMuted">#606078</Color>

    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderColorLight}"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="AccentBlueDarkBrush" Color="{StaticResource AccentBlueDark}"/>
    <SolidColorBrush x:Key="AccentBlueLightBrush" Color="{StaticResource AccentBlueLight}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
  </Application.Resources>

  <Application.Styles>
    <SimpleTheme />
    <StyleInclude Source="avares://UABEANext4/Themes/DockSimpleThemeEdit.axaml" />
    <StyleInclude Source="avares://UABEANext4/Themes/HeaderedContentControlTheme.axaml" />
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml"/>
    <StyleInclude Source="avares://UABEANext4/Themes/TabTheme.axaml" />
    <StyleInclude Source="avares://UABEANext4/Themes/DataValidationStyle.axaml" />
    <StyleInclude Source="avares://UABEANext4/Themes/RadioButtonListBox.axaml" />
    <StyleInclude Source="avares://AvaloniaEdit/Themes/Simple/AvaloniaEdit.xaml" />

    <!-- ==================== DARK BLUE CYBER THEME ==================== -->

    <!-- Global Window Styling -->
    <Style Selector="Window">
      <Setter Property="Background" Value="#0a0a0f"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>

    <!-- Global Text Styling -->
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>

    <!-- Accent Text (Blue with Glow Effect) -->
    <Style Selector="TextBlock.accent">
      <Setter Property="Foreground" Value="#00a8ff"/>
    </Style>

    <Style Selector="TextBlock.glow">
      <Setter Property="Foreground" Value="#00a8ff"/>
      <Setter Property="Effect">
        <DropShadowEffect Color="#00a8ff" BlurRadius="8" OffsetX="0" OffsetY="0" Opacity="0.6"/>
      </Setter>
    </Style>

    <!-- Modern Button Style with Blue Glow -->
    <Style Selector="Button">
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Padding" Value="16,8"/>
      <Setter Property="Background" Value="#1a1a28"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="BorderBrush" Value="#303048"/>
      <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#252538"/>
      <Setter Property="BorderBrush" Value="#00a8ff"/>
    </Style>
    <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#0080cc"/>
      <Setter Property="BorderBrush" Value="#00a8ff"/>
    </Style>
    <Style Selector="Button:disabled /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="Foreground" Value="#404058"/>
    </Style>

    <!-- Primary Action Button -->
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="#0080cc"/>
      <Setter Property="BorderBrush" Value="#00a8ff"/>
      <Setter Property="Foreground" Value="#ffffff"/>
    </Style>
    <Style Selector="Button.primary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#00a8ff"/>
    </Style>

    <!-- Modern TextBox Style -->
    <Style Selector="TextBox">
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="BorderBrush" Value="#252538"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="12,8"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="CaretBrush" Value="#00a8ff"/>
      <Setter Property="SelectionBrush" Value="#00a8ff"/>
    </Style>
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
      <Setter Property="BorderBrush" Value="#00a8ff"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
      <Setter Property="BorderBrush" Value="#303048"/>
    </Style>

    <!-- Modern ComboBox Style -->
    <Style Selector="ComboBox">
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="BorderBrush" Value="#252538"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="12,8"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="ComboBox:pointerover /template/ Border#Background">
      <Setter Property="BorderBrush" Value="#303048"/>
    </Style>
    <Style Selector="ComboBox:focus /template/ Border#Background">
      <Setter Property="BorderBrush" Value="#00a8ff"/>
    </Style>
    <Style Selector="ComboBoxItem">
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
      <Setter Property="Background" Value="#1a1a28"/>
    </Style>
    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
      <Setter Property="Background" Value="#0080cc"/>
    </Style>

    <!-- Modern CheckBox Style -->
    <Style Selector="CheckBox">
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="CheckBox /template/ Border#NormalRectangle">
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="BorderBrush" Value="#252538"/>
    </Style>
    <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
      <Setter Property="BorderBrush" Value="#00a8ff"/>
    </Style>
    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
      <Setter Property="Background" Value="#00a8ff"/>
      <Setter Property="BorderBrush" Value="#00a8ff"/>
    </Style>

    <!-- Modern RadioButton Style -->
    <Style Selector="RadioButton">
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="RadioButton /template/ Ellipse#OuterEllipse">
      <Setter Property="Fill" Value="#0f0f18"/>
      <Setter Property="Stroke" Value="#252538"/>
    </Style>
    <Style Selector="RadioButton:pointerover /template/ Ellipse#OuterEllipse">
      <Setter Property="Stroke" Value="#00a8ff"/>
    </Style>
    <Style Selector="RadioButton:checked /template/ Ellipse#CheckGlyph">
      <Setter Property="Fill" Value="#00a8ff"/>
    </Style>

    <!-- Modern Menu Style -->
    <Style Selector="Menu">
      <Setter Property="Background" Value="#0a0a0f"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="MenuItem">
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#1a1a28"/>
    </Style>
    <Style Selector="MenuItem:selected /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#0080cc"/>
    </Style>
    <Style Selector="ContextMenu">
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="BorderBrush" Value="#252538"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- Modern TreeView Style -->
    <Style Selector="TreeView">
      <Setter Property="Background" Value="#0a0a0f"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="TreeViewItem">
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="TreeViewItem:pointerover /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#151520"/>
    </Style>
    <Style Selector="TreeViewItem:selected /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#0080cc"/>
    </Style>

    <!-- Modern ListBox Style -->
    <Style Selector="ListBox">
      <Setter Property="Background" Value="#0a0a0f"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="BorderBrush" Value="#252538"/>
    </Style>
    <Style Selector="ListBoxItem">
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="Padding" Value="12,8"/>
    </Style>
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#151520"/>
    </Style>
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#0080cc"/>
    </Style>

    <!-- Modern DataGrid Style -->
    <Style Selector="DataGrid">
      <Setter Property="Background" Value="#0a0a0f"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="GridLinesVisibility" Value="Horizontal"/>
      <Setter Property="HorizontalGridLinesBrush" Value="#1a1a28"/>
      <Setter Property="BorderBrush" Value="#252538"/>
    </Style>
    <Style Selector="DataGridRow">
      <Setter Property="Background" Value="#0a0a0f"/>
    </Style>
    <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
      <Setter Property="Fill" Value="#151520"/>
    </Style>
    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
      <Setter Property="Fill" Value="#0080cc"/>
    </Style>
    <Style Selector="DataGridColumnHeader">
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="Foreground" Value="#00a8ff"/>
      <Setter Property="Padding" Value="12,8"/>
      <Setter Property="BorderBrush" Value="#252538"/>
      <Setter Property="BorderThickness" Value="0,0,0,1"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="DataGridCell">
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>

    <!-- Modern TabControl Style -->
    <Style Selector="TabControl">
      <Setter Property="Background" Value="#0a0a0f"/>
    </Style>
    <Style Selector="TabItem">
      <Setter Property="Foreground" Value="#a0a0b8"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Padding" Value="16,10"/>
    </Style>
    <Style Selector="TabItem:pointerover">
      <Setter Property="Foreground" Value="#e8e8f0"/>
    </Style>
    <Style Selector="TabItem:selected">
      <Setter Property="Foreground" Value="#00a8ff"/>
      <Setter Property="Background" Value="#151520"/>
    </Style>

    <!-- Modern ProgressBar Style -->
    <Style Selector="ProgressBar">
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="Foreground" Value="#00a8ff"/>
      <Setter Property="Height" Value="8"/>
    </Style>
    <Style Selector="ProgressBar /template/ Border#PART_Indicator">
      <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- Modern Slider Style -->
    <Style Selector="Slider">
      <Setter Property="Background" Value="#0f0f18"/>
    </Style>
    <Style Selector="Slider /template/ Thumb">
      <Setter Property="Background" Value="#00a8ff"/>
    </Style>
    <Style Selector="Slider /template/ RepeatButton#PART_DecreaseButton /template/ Border">
      <Setter Property="Background" Value="#00a8ff"/>
    </Style>

    <!-- Modern ScrollBar Style -->
    <Style Selector="ScrollBar">
      <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="ScrollBar /template/ Thumb">
      <Setter Property="Background" Value="#252538"/>
      <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <Style Selector="ScrollBar /template/ Thumb:pointerover">
      <Setter Property="Background" Value="#303048"/>
    </Style>

    <!-- Modern Border/Card Style -->
    <Style Selector="Border.card">
      <Setter Property="CornerRadius" Value="12"/>
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="BorderBrush" Value="#252538"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="16"/>
    </Style>

    <Style Selector="Border.cardGlow">
      <Setter Property="CornerRadius" Value="12"/>
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="BorderBrush" Value="#00a8ff"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="16"/>
      <Setter Property="Effect">
        <DropShadowEffect Color="#00a8ff" BlurRadius="20" OffsetX="0" OffsetY="0" Opacity="0.3"/>
      </Setter>
    </Style>

    <!-- Panel backgrounds -->
    <Style Selector="Panel.panel">
      <Setter Property="Background" Value="#0a0a0f"/>
    </Style>

    <!-- Expander Style -->
    <Style Selector="Expander">
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="BorderBrush" Value="#252538"/>
    </Style>
    <Style Selector="Expander /template/ ToggleButton#PART_toggle">
      <Setter Property="Foreground" Value="#00a8ff"/>
    </Style>

    <!-- ToolTip Style -->
    <Style Selector="ToolTip">
      <Setter Property="Background" Value="#1a1a28"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="BorderBrush" Value="#303048"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Padding" Value="8,6"/>
    </Style>

    <!-- Separator Style -->
    <Style Selector="Separator">
      <Setter Property="Background" Value="#252538"/>
      <Setter Property="Height" Value="1"/>
      <Setter Property="Margin" Value="8,4"/>
    </Style>

    <!-- Label Style -->
    <Style Selector="Label">
      <Setter Property="Foreground" Value="#a0a0b8"/>
    </Style>

    <!-- Tool Chrome Control -->
    <Style Selector="ToolChromeControl">
      <Setter Property="Background" Value="#0a0a0f"/>
    </Style>
    <Style Selector="ToolChromeControl /template/ TextBlock#PART_Title">
      <Setter Property="Margin" Value="0,2,8,2"/>
      <Setter Property="Foreground" Value="#00a8ff"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- NumericUpDown Style -->
    <Style Selector="NumericUpDown">
      <Setter Property="Background" Value="#0f0f18"/>
      <Setter Property="Foreground" Value="#e8e8f0"/>
      <Setter Property="BorderBrush" Value="#252538"/>
      <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <!-- Scroll bar thumb thickness -->
    <Style>
      <Style.Resources>
        <sys:Double x:Key="ScrollBarThumbThickness">10</sys:Double>
      </Style.Resources>
    </Style>

    <!-- ==================== END DARK BLUE CYBER THEME ==================== -->
  </Application.Styles>
</Application>
