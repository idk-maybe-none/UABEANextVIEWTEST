<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:local="using:UABEANext4"
             x:Class="UABEANext4.App"
             RequestedThemeVariant="Dark">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Resources>
    <!-- Exact colors from HTML design -->
    <Color x:Key="PureBlack">#000000</Color>
    <Color x:Key="Cyan">#00d9ff</Color>
    <Color x:Key="CyanDark">#0099cc</Color>
    <Color x:Key="CyanDim">#006688</Color>
    <Color x:Key="BorderDim">#003344</Color>

    <SolidColorBrush x:Key="PureBlackBrush" Color="#000000"/>
    <SolidColorBrush x:Key="CyanBrush" Color="#00d9ff"/>
    <SolidColorBrush x:Key="CyanDarkBrush" Color="#0099cc"/>
    <SolidColorBrush x:Key="CyanDimBrush" Color="#006688"/>
    <SolidColorBrush x:Key="BorderDimBrush" Color="#003344"/>
  </Application.Resources>

  <Application.Styles>
    <SimpleTheme />
    <StyleInclude Source="avares://UABEANext4/Themes/DockSimpleThemeEdit.axaml" />
    <StyleInclude Source="avares://UABEANext4/Themes/HeaderedContentControlTheme.axaml" />
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml"/>
    <StyleInclude Source="avares://UABEANext4/Themes/TabTheme.axaml" />
    <StyleInclude Source="avares://UABEANext4/Themes/DataValidationStyle.axaml" />
    <StyleInclude Source="avares://UABEANext4/Themes/RadioButtonListBox.axaml" />
    <StyleInclude Source="avares://AvaloniaEdit/Themes/Simple/AvaloniaEdit.xaml" />

    <!-- ==================== XERA CYBER THEME (Pure Black + Cyan Glow) ==================== -->

    <!-- Global Window - Pure Black -->
    <Style Selector="Window">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>

    <!-- Global Text - Cyan -->
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>

    <!-- Glowing Text Style -->
    <Style Selector="TextBlock.glow">
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="Effect">
        <DropShadowEffect Color="#00d9ff" BlurRadius="15" OffsetX="0" OffsetY="0" Opacity="0.8"/>
      </Setter>
    </Style>

    <!-- Title/Logo Style with intense glow -->
    <Style Selector="TextBlock.title">
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Effect">
        <DropShadowEffect Color="#00d9ff" BlurRadius="20" OffsetX="0" OffsetY="0" Opacity="1.0"/>
      </Setter>
    </Style>

    <!-- Button - Transparent with cyan border -->
    <Style Selector="Button">
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Padding" Value="15,8"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="BorderBrush" Value="#00d9ff"/>
    </Style>
    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#00d9ff"/>
      <Setter Property="Foreground" Value="#000000"/>
    </Style>
    <Style Selector="Button:pointerover">
      <Setter Property="Effect">
        <DropShadowEffect Color="#00d9ff" BlurRadius="20" OffsetX="0" OffsetY="0" Opacity="0.8"/>
      </Setter>
    </Style>
    <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#0099cc"/>
    </Style>
    <Style Selector="Button:disabled /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="#003344"/>
      <Setter Property="BorderBrush" Value="#003344"/>
    </Style>

    <!-- TextBox - Black with cyan border -->
    <Style Selector="TextBox">
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="BorderBrush" Value="#006688"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="CaretBrush" Value="#00d9ff"/>
      <Setter Property="SelectionBrush" Value="#00d9ff"/>
    </Style>
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
      <Setter Property="BorderBrush" Value="#00d9ff"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
      <Setter Property="BorderBrush" Value="#00d9ff"/>
    </Style>

    <!-- ComboBox -->
    <Style Selector="ComboBox">
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="BorderBrush" Value="#006688"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="ComboBox:pointerover /template/ Border#Background">
      <Setter Property="BorderBrush" Value="#00d9ff"/>
    </Style>
    <Style Selector="ComboBox:focus /template/ Border#Background">
      <Setter Property="BorderBrush" Value="#00d9ff"/>
    </Style>
    <Style Selector="ComboBoxItem">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
      <Setter Property="Background" Value="#003344"/>
    </Style>
    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
      <Setter Property="Background" Value="#00d9ff"/>
      <Setter Property="Foreground" Value="#000000"/>
    </Style>

    <!-- CheckBox -->
    <Style Selector="CheckBox">
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="CheckBox /template/ Border#NormalRectangle">
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="BorderBrush" Value="#006688"/>
    </Style>
    <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
      <Setter Property="BorderBrush" Value="#00d9ff"/>
    </Style>
    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
      <Setter Property="Background" Value="#00d9ff"/>
      <Setter Property="BorderBrush" Value="#00d9ff"/>
    </Style>

    <!-- RadioButton -->
    <Style Selector="RadioButton">
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="RadioButton /template/ Ellipse#OuterEllipse">
      <Setter Property="Fill" Value="#000000"/>
      <Setter Property="Stroke" Value="#006688"/>
    </Style>
    <Style Selector="RadioButton:pointerover /template/ Ellipse#OuterEllipse">
      <Setter Property="Stroke" Value="#00d9ff"/>
    </Style>
    <Style Selector="RadioButton:checked /template/ Ellipse#CheckGlyph">
      <Setter Property="Fill" Value="#00d9ff"/>
    </Style>

    <!-- Menu - Black with cyan text -->
    <Style Selector="Menu">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="MenuItem">
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#003344"/>
    </Style>
    <Style Selector="MenuItem:selected /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#00d9ff"/>
    </Style>
    <Style Selector="MenuItem:selected">
      <Setter Property="Foreground" Value="#000000"/>
    </Style>
    <Style Selector="ContextMenu">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="BorderBrush" Value="#00d9ff"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Padding" Value="2"/>
    </Style>

    <!-- TreeView -->
    <Style Selector="TreeView">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="TreeViewItem">
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="TreeViewItem:pointerover /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#001a22"/>
    </Style>
    <Style Selector="TreeViewItem:selected /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="#003344"/>
    </Style>

    <!-- ListBox -->
    <Style Selector="ListBox">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="BorderBrush" Value="#003344"/>
    </Style>
    <Style Selector="ListBoxItem">
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="Padding" Value="10,6"/>
    </Style>
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#001a22"/>
    </Style>
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="#003344"/>
    </Style>

    <!-- DataGrid -->
    <Style Selector="DataGrid">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="GridLinesVisibility" Value="Horizontal"/>
      <Setter Property="HorizontalGridLinesBrush" Value="#003344"/>
      <Setter Property="BorderBrush" Value="#003344"/>
    </Style>
    <Style Selector="DataGridRow">
      <Setter Property="Background" Value="#000000"/>
    </Style>
    <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
      <Setter Property="Fill" Value="#001a22"/>
    </Style>
    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
      <Setter Property="Fill" Value="#003344"/>
    </Style>
    <Style Selector="DataGridColumnHeader">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="BorderBrush" Value="#003344"/>
      <Setter Property="BorderThickness" Value="0,0,0,1"/>
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style Selector="DataGridCell">
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>

    <!-- TabControl -->
    <Style Selector="TabControl">
      <Setter Property="Background" Value="#000000"/>
    </Style>
    <Style Selector="TabItem">
      <Setter Property="Foreground" Value="#006688"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Padding" Value="12,8"/>
    </Style>
    <Style Selector="TabItem:pointerover">
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>
    <Style Selector="TabItem:selected">
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="Background" Value="#001a22"/>
    </Style>

    <!-- ProgressBar -->
    <Style Selector="ProgressBar">
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Background" Value="#001a22"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="Height" Value="6"/>
    </Style>
    <Style Selector="ProgressBar /template/ Border#PART_Indicator">
      <Setter Property="CornerRadius" Value="0"/>
    </Style>

    <!-- Slider -->
    <Style Selector="Slider">
      <Setter Property="Background" Value="#001a22"/>
    </Style>
    <Style Selector="Slider /template/ Thumb">
      <Setter Property="Background" Value="#00d9ff"/>
    </Style>
    <Style Selector="Slider /template/ RepeatButton#PART_DecreaseButton /template/ Border">
      <Setter Property="Background" Value="#00d9ff"/>
    </Style>

    <!-- ScrollBar -->
    <Style Selector="ScrollBar">
      <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="ScrollBar /template/ Thumb">
      <Setter Property="Background" Value="#003344"/>
      <Setter Property="CornerRadius" Value="0"/>
    </Style>
    <Style Selector="ScrollBar /template/ Thumb:pointerover">
      <Setter Property="Background" Value="#00d9ff"/>
    </Style>

    <!-- Border/Card with glow -->
    <Style Selector="Border.card">
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="BorderBrush" Value="#003344"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="12"/>
    </Style>

    <Style Selector="Border.glowCard">
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="BorderBrush" Value="#00d9ff"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="Padding" Value="12"/>
      <Setter Property="Effect">
        <DropShadowEffect Color="#00d9ff" BlurRadius="30" OffsetX="0" OffsetY="0" Opacity="0.4"/>
      </Setter>
    </Style>

    <!-- Panel -->
    <Style Selector="Panel.panel">
      <Setter Property="Background" Value="#000000"/>
    </Style>

    <!-- Expander -->
    <Style Selector="Expander">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="BorderBrush" Value="#003344"/>
    </Style>
    <Style Selector="Expander /template/ ToggleButton#PART_toggle">
      <Setter Property="Foreground" Value="#00d9ff"/>
    </Style>

    <!-- ToolTip -->
    <Style Selector="ToolTip">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="BorderBrush" Value="#00d9ff"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Separator -->
    <Style Selector="Separator">
      <Setter Property="Background" Value="#003344"/>
      <Setter Property="Height" Value="1"/>
      <Setter Property="Margin" Value="4,2"/>
    </Style>

    <!-- Label -->
    <Style Selector="Label">
      <Setter Property="Foreground" Value="#006688"/>
    </Style>

    <!-- Tool Chrome Control -->
    <Style Selector="ToolChromeControl">
      <Setter Property="Background" Value="#000000"/>
    </Style>
    <Style Selector="ToolChromeControl /template/ TextBlock#PART_Title">
      <Setter Property="Margin" Value="0,2,8,2"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Effect">
        <DropShadowEffect Color="#00d9ff" BlurRadius="10" OffsetX="0" OffsetY="0" Opacity="0.6"/>
      </Setter>
    </Style>

    <!-- NumericUpDown -->
    <Style Selector="NumericUpDown">
      <Setter Property="Background" Value="#000000"/>
      <Setter Property="Foreground" Value="#00d9ff"/>
      <Setter Property="BorderBrush" Value="#006688"/>
      <Setter Property="CornerRadius" Value="0"/>
    </Style>

    <!-- Scroll bar thumb thickness -->
    <Style>
      <Style.Resources>
        <sys:Double x:Key="ScrollBarThumbThickness">8</sys:Double>
      </Style.Resources>
    </Style>

    <!-- ==================== END XERA CYBER THEME ==================== -->
  </Application.Styles>
</Application>
